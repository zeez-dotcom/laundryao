{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    },
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["node"],
    "allowImportingTsExtensions": false
  },
  "include": [
    "server/**/*.ts",
    "server/**/*.tsx",
    "shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client",
    "**/*.test.ts",
    "**/*.test.tsx",
    "*.ts",
    "*.tsx"
  ]
}
