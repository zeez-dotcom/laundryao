DATABASE_URL=postgres://postgres:postgres@localhost:5432/flutterpos
PORT=5000
HOST=0.0.0.0
SESSION_SECRET=change-me-in-production
SEED_ON_START=false

# Analytics event bus (defaults to memory when unset)
EVENT_BUS_DRIVER=memory
EVENT_BUS_KAFKA_TOPIC=analytics.events
KAFKA_BROKERS=localhost:9092
EVENT_BUS_PUBSUB_TOPIC=analytics-events
PUBSUB_PROJECT_ID=
EVENT_BUS_MAX_RETRIES=3
EVENT_BUS_RETRY_DELAY_MS=100

# Warehouse sink configuration (optional)
WAREHOUSE_DATABASE_URL=postgres://warehouse:warehouse@localhost:5433/laundry_warehouse
EVENT_SINK_BATCH_SIZE=50
EVENT_SINK_FLUSH_INTERVAL_MS=5000

# Optional: client-side error reporting endpoint
# VITE_ERROR_REPORT_DSN=

# Optional: Email notifications
# ENABLE_EMAIL_NOTIFICATIONS=false
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=
# SMTP_PASS=
# SMTP_FROM=

# Optional: SMS notifications (Twilio)
# ENABLE_SMS_NOTIFICATIONS=false
# SMS_PROVIDER=twilio
# SMS_ACCOUNT_SID=
# SMS_AUTH_TOKEN=
# SMS_FROM_NUMBER=
